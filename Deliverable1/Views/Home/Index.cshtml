@{
    ViewData["Title"] = "Home Page";
}
<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#createProject">Create New Project</button>

<!-- Create Project Modal -->
<div class="modal fade" id="createProject" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" id="editModal" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Project </h5>
            </div>
            <form>
                <div style="margin:10px" class="form-group">
                    Project Name: <input type="text" class="form-control">
                </div>
                <div style="margin:10px" class="form-group">
                    Start Date:<input type="text" class="form-control">
                </div>
                <div style="margin:10px" class="form-group">
                    Expected End Date:<input type="text" class="form-control">
                </div>
                <div style="margin:15px" class="form-group">
                    Actual End Date:<input type="text" class="form-control">
                </div>
                <div style="margin:15px" class="form-group">
                    Description:<input type="text" class="form-control">
                </div>
                <div style="margin:15px" class="form-group">
                    <select>
                        <option>Project Type</option>
                        <option>New Project</option>
                        <option>Upgrade</option>
                        <option>Repair</option>
                    </select>
                </div>
                <div style="margin:15px" class="form-check">
                    <input type="checkbox" class="form-check-input" id="planned">
                    <label class="form-check-label" for="exampleCheck1">Planned Project</label>
                </div>
                <div style="margin:15px" class="form-check">
                    <input type="checkbox" class="form-check-input" id="unplanned">
                    <label class="form-check-label" for="exampleCheck1">Unplanned Project</label>
                </div>
                <div style="margin:15px" class="form-group">
                    Funded From:<input type="text" class="form-control">
                </div>
                <div style="margin:15px" class="form-group">
                    Labor Costs:<input type="text" class="form-control">
                </div>
                <div style="margin:15px" class="form-group">
                    Material Costs:<input type="text" class="form-control">
                </div>
                <div style="margin:15px" class="form-group">
                    Volunteer Hours:<input type="text" class="form-control">
                </div>
                <button onclick="capToggle()">View CAP Information</button>
                <div id="CAP">
                    <div style="margin:15px" class="form-group">
                        CAPex Budgeted:<input type="text" class="form-control">
                    </div>
                    <div style="margin:15px" class="form-group">
                        CAPex Quoted:<input type="text" class="form-control">
                    </div>
                    <div style="margin:15px" class="form-group">
                        CAPex Actual:<input type="text" class="form-control">
                    </div>
                    <div style="margin:15px" class="form-group">
                        CAPex Difference:<input type="text" class="form-control">
                    </div>
                </div>
                <button onclick="opexToggle()">View OPEX Information</button>
                <div id="OPEX">
                    <div style="margin:15px" class="form-group">
                        OPex Original:<input type="text" class="form-control">
                    </div>
                    <div style="margin:15px" class="form-group">
                        OPex Budgeted:<input type="text" class="form-control">
                    </div>
                    <div style="margin:15px" class="form-group">
                        OPex Actual:<input type="text" class="form-control">
                    </div>
                    <div style="margin:15px" class="form-group">
                        OPex Difference:<input type="text" class="form-control">
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="updateOrder()">Update Order</button>
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(window).load(function () {
        $("#CAP").hide();
        $("#OPEX").hide();
    });
    $('#createProject').on('shown.bs.modal', function () {
    });
    function capToggle() {
        $("#CAP").toggle();
    }
    function opexToggle() {
        $("#OPEX").toggle();
    }
</script>